{# src/JFC/AdminBundle/Resources/views/Register/register.html.twig #}
{% extends 'JFCCoreBundle::layout.html.twig' %}

{% block body %}
    <div class="container">

    <form class="form-signin" action="{{ path('jfc_user_register') }}" method="POST">
        <h2 class="form-signin-heading">Please register</h2>
        {#{{ form_widget(form) }}#} {# default form #}
        {{ form_errors(form) }}

        {{ form_row(form.username) }}
        {{ form_row(form.plainPassword, { 'label': 'Password' }) }}

        {{ form_rest(form) }}
        <button class="btn btn-lg btn-primary btn-block" type="submit">Register</button>
    </form>

    </div>
{% endblock %}